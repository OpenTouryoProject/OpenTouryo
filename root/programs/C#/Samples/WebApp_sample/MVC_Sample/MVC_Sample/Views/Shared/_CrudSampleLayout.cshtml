@* マスタ・ページに相当 *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    @RenderSection("HeaderSection", required: true)

    <script type="text/javascript">
        // Resolve URL in the javascript
        var baseUrl = '@Url.Content("~/")'
    </script>

</head>
<body onload="Fx_Document_OnLoad();Fx_AdjustStyle();">

    <div id="header-fixed">
        <div id="header-bk">
            <div id="header">
                <div id="header-logo"><img alt="logo" style="width:80px; height:80px;" src="~/images/otr/logo.png" /></div>
            </div>
        </div>
    </div>
    <div id="body-bk">
        <div id="body">
            <div id="sidemenu">
                <ul>
                    <li>・・・</li>
                </ul>
            </div>
            <div id="contents">

                @RenderBody()

            </div>
        </div>
    </div>
    <div id="footer-fixed">
        <div id="footer-bk">
            <div id="footer">
                Powered by <a target="_blank" href="https://github.com/OpenTouryoProject">OpenTouryo</a>.
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryuno")
    @Scripts.Render("~/bundles/otr")
    @Scripts.Render("~/bundles/app")

    @RenderSection("FooterSection", required: true)

</body>
</html>

