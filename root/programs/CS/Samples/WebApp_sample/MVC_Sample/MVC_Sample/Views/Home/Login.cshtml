@using MVC_Sample.Models.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Sign-in";
}

<h2>Sign-in</h2>

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

@using (@Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    
    <table>
        <tr>
            <th>ユーザーID</th>
            <td>@Html.TextBoxFor(model => model.UserName)</td>
        </tr>
        <tr>
            <th>パスワード</th>
            <td>@Html.PasswordFor(model => model.Password)</td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:right;">
                <input type="submit" name="normal" value="ログイン" style="width:150px" />
            <td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:right;">
                <input type="submit" name="external" value="外部ログイン" style="width:150px" />
            <td>
        </tr>
    </table>
}

